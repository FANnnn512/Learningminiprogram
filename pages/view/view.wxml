<!-- --------1.view相当于div---------- -->
<view class="box1">哈哈哈</view>
<view>呵呵呵</view>

<!-- -------2.view组件可以作为一个容器---------- -->
<view>
  <text>123</text>
</view>

<!-- -----3.hover-class和hover-stay-time属性--------------- -->
<view class="box2" hover-class="hover-view" hover-stay-time="{{0}}">
  hahaha
</view>


<!-- ------------4.hover-stop-propagation属性 阻止祖先组件的点击态-------------- -->
<view class="box3" hover-class="hover-view2">
  <!-- -----3.hover-class和hover-stay-time属性--------------- -->
  <view class="box2" hover-class="hover-view" hover-stay-time="{{0}}" hover-stop-propagation>
    hahaha
  </view>
</view>